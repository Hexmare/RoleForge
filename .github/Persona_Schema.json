{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID or slug"
    },
    "name": {
      "type": "string"
    },
    "species": {
      "type": "string",
      "description": "e.g., 'Human', 'Elf'"
    },
    "race": {
      "type": "string",
      "description": "e.g., 'Caucasian'"
    },
    "ethnicity": {
      "type": "string",
      "description": "e.g., 'European', 'African', 'Asian'"
    },
    "gender": {
      "type": "string",
      "description": "e.g., 'Female', 'Male'"
    },
    "age": {
      "type": "string",
      "description": "e.g., '25', '19 years old', 'mid-thirties'"
    },
    "appearance": {
      "type": "object",
      "properties": {
        "height": { "type": "string" },
        "weight": { "type": "string" },
        "build": { "type": "string" },
        "eyeColor": { "type": "string" },
        "hairColor": { "type": "string" },
        "hairStyle": { "type": "string" },
        "skinTone": { "type": "string", "description": "e.g., 'pale', 'fair', 'olive', 'tan', 'brown', 'deep brown'" },
        "attractiveness": { "type": "string" },
        "distinctiveFeatures": { "type": "string" }
      },
      "required": ["height", "weight", "build", "eyeColor", "hairColor", "hairStyle", "attractiveness"]
    },
    "aesthetic": {
      "type": "string",
      "description": "Comma-separated styles"
    },
    "currentOutfit": {
      "type": "string",
      "description": "Comma-separated or short phrase"
    },
    "personality": {
      "type": "string",
      "description": "Comma-separated traits"
    },
    "skills": {
      "type": "string",
      "description": "Comma-separated"
    },
    "powers": {
      "type": "string"
    },
    "occupation": {
      "type": "string"
    },
    "workplace": {
      "type": "string"
    },
    "sexualOrientation": {
      "type": "string"
    },
    "relationshipStatus": {
      "type": "string"
    },
    "relationshipPartner": {
      "type": "string"
    },
    "likes": {
      "type": "string",
      "description": "Comma-separated"
    },
    "turnOns": {
      "type": "string",
      "description": "Comma-separated"
    },
    "dislikes": {
      "type": "string",
      "description": "Comma-separated"
    },
    "turnOffs": {
      "type": "string",
      "description": "Comma-separated"
    },
    "kinks": {
      "type": "string",
      "description": "Comma-separated"
    },
    "backstory": {
      "type": "string"
    },
    "scenario": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "avatarUrl": {
      "type": "string"
    },
    "extensions": {
      "type": "object"
    }
  },
  "required": ["id", "name", "species", "race", "gender", "appearance", "aesthetic", "currentOutfit", "personality", "skills", "occupation", "sexualOrientation", "relationshipStatus", "likes", "turnOns", "dislikes", "turnOffs", "kinks"]
}