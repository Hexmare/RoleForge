{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID or slug"
    },
    "name": {
      "type": "string"
    },
    "species": {
      "type": "string",
      "description": "e.g., 'Human', 'Elf', 'Succubus'"
    },
    "race": {
      "type": "string",
      "description": "e.g., 'Caucasian', 'Dark Elf'"
    },
    "gender": {
      "type": "string",
      "description": "e.g., 'Female', 'Male', 'Non-binary'"
    },
    "appearance": {
      "type": "object",
      "properties": {
        "height": { "type": "string" },
        "weight": { "type": "string" },
        "build": { "type": "string" },
        "eyeColor": { "type": "string" },
        "hairColor": { "type": "string" },
        "hairStyle": { "type": "string" },
        "attractiveness": { "type": "string" },
        "distinctiveFeatures": { "type": "string" }
      },
      "required": ["height", "weight", "build", "eyeColor", "hairColor", "hairStyle", "attractiveness"]
    },
    "aesthetic": {
      "type": "string",
      "description": "Comma-separated styles"
    },
    "currentOutfit": {
      "type": "string",
      "description": "Comma-separated or short phrase"
    },
    "personality": {
      "type": "string",
      "description": "Comma-separated traits"
    },
    "skills": {
      "type": "string",
      "description": "Comma-separated"
    },
    "powers": {
      "type": "string"
    },
    "occupation": {
      "type": "string"
    },
    "workplace": {
      "type": "string"
    },
    "sexualOrientation": {
      "type": "string"
    },
    "relationshipStatus": {
      "type": "string"
    },
    "relationshipPartner": {
      "type": "string"
    },
    "likes": {
      "type": "string",
      "description": "Comma-separated"
    },
    "turnOns": {
      "type": "string",
      "description": "Comma-separated"
    },
    "dislikes": {
      "type": "string",
      "description": "Comma-separated"
    },
    "turnOffs": {
      "type": "string",
      "description": "Comma-separated"
    },
    "kinks": {
      "type": "string",
      "description": "Comma-separated"
    },
    "familyMembers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of family member names"
    },
    "secrets": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of character secrets"
    },
    "goals": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of character goals"
    },
    "backstory": {
      "type": "string"
    },
    "scenario": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "avatarUrl": {
      "type": "string"
    },
    "extensions": {
      "type": "object"
    }
  },
  "required": ["id", "name", "species", "race", "gender", "appearance", "aesthetic", "currentOutfit", "personality", "skills", "occupation", "sexualOrientation", "relationshipStatus", "likes", "turnOns", "dislikes", "turnOffs", "kinks"]
}