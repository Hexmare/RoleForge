{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID or slug"
    },
    "name": {
      "type": "string"
    },
    "species": {
      "type": "string",
      "description": "e.g., 'Human', 'Elf', 'Succubus'"
    },
    "race": {
      "type": "string",
      "description": "e.g., 'Caucasian', 'Dark Elf'"
    },
    "gender": {
      "type": "string",
      "description": "e.g., 'Female', 'Male', 'Non-binary'"
    },
    "description": {
      "type": "string",
      "description": "Short bio, backstory, or scenario description"
    },
    "appearance": {
      "type": "object",
      "properties": {
        "physical": {
          "type": "string",
          "description": "Physical description consolidating height, weight, build, features, etc. e.g., 'tall, athletic build, 6ft, muscular, striking blue eyes'"
        },
        "aesthetic": {
          "type": "string",
          "description": "Style and aesthetic, e.g., 'gothic, mysterious, elegant'"
        }
      }
    },
    "currentOutfit": {
      "type": "string",
      "description": "Initial clothing description"
    },
    "personality": {
      "type": "string",
      "description": "Brief personality overview"
    },
    "traits": {
      "type": "object",
      "properties": {
        "likes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Things the character likes or is attracted to"
        },
        "dislikes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Things the character dislikes or avoids"
        },
        "kinks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Sexual preferences and kinks"
        },
        "secrets": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Hidden information or secrets"
        },
        "goals": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Character objectives and motivations"
        }
      }
    },
    "abilities": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Combined skills, powers, and abilities e.g., ['swordfighting', 'fire magic', 'persuasion']"
    },
    "occupation": {
      "type": "string",
      "description": "Job or role, include workplace if relevant e.g., 'blacksmith at the forge'"
    },
    "sexualOrientation": {
      "type": "string",
      "description": "e.g., 'heterosexual', 'bisexual', 'pansexual'"
    },
    "relationshipStatus": {
      "type": "string",
      "description": "e.g., 'single', 'partnered with [name]', 'married'"
    },
    "avatarUrl": {
      "type": "string",
      "description": "Optional avatar image URL"
    },
    "extensions": {
      "type": "object",
      "description": "Optional extension data"
    }
  },
  "required": ["id", "name", "species", "race", "gender", "description", "appearance", "currentOutfit", "personality", "abilities", "occupation", "sexualOrientation", "relationshipStatus"]
}