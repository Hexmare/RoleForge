{
  "spec": "chara_card_v2",
  "spec_version": "2.0",
  "data": {
    // Classic V1 fields (required for backward compatibility)
    "name": "string",
    "description": "string",
    "personality": "string",
    "scenario": "string",
    "first_mes": "string",
    "mes_example": "string",

    // New V2 fields
    "creator_notes": "string",                  // Displayed in UI (markdown supported)
    "system_prompt": "string",                  // Character-specific system prompt override
    "post_history_instructions": "string",      // Injected after chat history
    "alternate_greetings": ["string", "..."],   // Additional first messages (for swipes)
    "tags": ["string", "..."],                  // Searchable tags
    "creator": "string",
    "character_version": "string",
    "extensions": { "key": "any" },              // Frontend-specific extensions

    // Optional embedded lorebook (replaces separate World Info in some cases)
    "character_book": {
      "name": "string (optional)",
      "description": "string (optional)",
      "scan_depth": integer,
      "token_budget": integer,
      "recursive_scanning": boolean,
      "extensions": {},
      "entries": [
        {
          "keys": ["string", "..."],
          "content": "string",
          "enabled": true,
          "insertion_order": integer,
          "case_sensitive": false,
          "extensions": {},
          // Additional optional fields...
        }
      ]
    }
  }
}